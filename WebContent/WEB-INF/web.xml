<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

	<display-name>NorthStar</display-name>

	<!-- Add Servlet -->
	<servlet>
		<servlet-name>add</servlet-name>
		<servlet-class>com.servlet.FirstServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>add</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>

	<!-- Add numbers Servlet -->
	<servlet>
		<servlet-name>addNumber</servlet-name>
		<servlet-class>com.servlet.AddNumberServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addNumber</servlet-name>
		<url-pattern>/add-num</url-pattern>
	</servlet-mapping>
	
	<!-- Login Servlet -->
	<servlet>
		<servlet-name>loginUser</servlet-name>
		<servlet-class>com.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginUser</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<!-- Registration Servlet -->
	<servlet>
		<servlet-name>registration</servlet-name>
		<servlet-class>com.servlet.RegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>registration</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>  
   		<welcome-file>login.jsp</welcome-file>
  	</welcome-file-list>
	

</web-app>
